#!/bin/bash
#
# ビルドテスト
#
set -e;

docker buildx build --platform linux/amd64,linux/arm64 -t codebuild:mzk -f Dockerfile.bullseye .;
docker buildx build --platform linux/amd64,linux/arm64 -t codebuild:mzk -f Dockerfile.bullseye-slim .;
docker buildx build --platform linux/amd64,linux/arm64 -t codebuild:mzk -f Dockerfile.buster .;
docker buildx build --platform linux/amd64,linux/arm64 -t codebuild:mzk -f Dockerfile.buster-slim .;
